<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yqman_widget_button_pressed_color"/>
            <corners android:bottomLeftRadius="@dimen/yqman_widget_radius_normal"
                     android:bottomRightRadius="@dimen/yqman_widget_radius_normal"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/yqman_widget_white"/>
            <corners android:bottomLeftRadius="@dimen/yqman_widget_radius_normal"
                     android:bottomRightRadius="@dimen/yqman_widget_radius_normal"/>
        </shape>
    </item>
    <!--默认值-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yqman_widget_white"/>
            <corners android:bottomLeftRadius="@dimen/yqman_widget_radius_normal"
                     android:bottomRightRadius="@dimen/yqman_widget_radius_normal"/>
        </shape>
    </item>
</selector>