<resources>
    <declare-styleable name="HorizontalDotView">
        <attr name="yqman_widget_dot_normal_resource" format="reference" />
        <attr name="yqman_widget_dot_selected_resource" format="reference" />
        <attr name="yqman_widget_dotMargin" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="HorizontalScrollPage">
        <attr name="yqman_widget_rollingFrequencySecond" format="integer"/>
        <attr name="yqman_widget_enableZoomImage" format="boolean"/>
        <attr name="yqman_widget_enableInfiniteSliding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CollapsibleLayout">
        <attr name="yqman_widget_content_layout" format="reference"/>
        <attr name="yqman_widget_expanded_title_layout" format="reference"/>
        <attr name="yqman_widget_collapsed_title_layout" format="reference"/>
        <attr name="yqman_widget_content_scrim_resource" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ScrollPickView">
        <attr name="yqman_widget_scroll_pick_item_offset" format="integer"/>
        <attr name="yqman_widget_scroll_pick_select_item_text_color" format="color"/>
        <attr name="yqman_widget_scroll_pick_normal_item_text_color" format="color"/>
        <attr name="yqman_widget_scroll_pick_select_background_color" format="color"/>
        <attr name="yqman_widget_scroll_pick_normal_background_color" format="color"/>
        <attr name="yqman_widget_scroll_pick_select_item_line_color" format="color"/>
        <attr name="yqman_widget_scroll_pick_min_value" format="integer"/>
        <attr name="yqman_widget_scroll_pick_max_value" format="integer"/>
        <attr name="yqman_widget_scroll_pick_enable_loop" format="boolean"/>
    </declare-styleable>
</resources>