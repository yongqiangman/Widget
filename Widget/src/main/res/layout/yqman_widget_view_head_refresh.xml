<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center_horizontal" >

    <LinearLayout
        android:id="@+id/refresh_header_container"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:paddingTop="@dimen/yqman_widget_padding_normal"
        android:gravity="center"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/refresh_header_image"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:padding="@dimen/yqman_widget_padding_normal"
            android:src="@drawable/yqman_widget_picture_refresh_arrow"/>
        <ProgressBar
            android:id="@+id/refresh_header_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/yqman_widget_padding_normal"
            style="@android:style/Widget.ProgressBar.Small"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/refresh_header_textView"
            android:gravity="center"
            android:padding="@dimen/yqman_widget_padding_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/yqman_widget_text_size_middle"
            />
    </LinearLayout>

</LinearLayout>